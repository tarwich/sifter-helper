{
	"manifest_version": 2,

	"name"        : "sifter-helper",
	"description" : "This extension interfaces with sifterapp to enable the email hash actions (ex: #resolve) while editing issues in the web browser.",
	"version"     : "1.0",

	"permissions": [
		"https://voidray.sifterapp.com/"
	],
	"content_scripts": [
		{
			"matches": [ "http://voidray.sifterapp.com/issues/*", "https://voidray.sifterapp.com/issues/*" ],
			"run_at" : "document_idle",
			"js"     : [
				"settings.js",
				"jquery.min.js",
				"content_script.js"
			]
		}
	]
}
